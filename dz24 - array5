using System;

internal class Program
{
    private static void Main(string[] args)
    {
        int maxNumber = 3;
        int minNumber = 1;
        int arraySize = 30;
        int repetitionsCount = 0;
        int maxRepetitionsCount = 0;
        int repeatingNumber = 0;
        int finalRepeatingNumber = 0;
        int[] array = new int[arraySize];

        Random random = new Random();

        Console.WriteLine("Исходная матрица:");

        for (int i = 0; i < array.Length; i++)
        {
            array[i] = random.Next(minNumber, maxNumber);
            Console.Write(array[i] + " ");
        }

        for (int i = 1; i < array.Length; i++)
        {
            if (array[i - 1] == array[i])
            {
                repetitionsCount++;
                repeatingNumber = array[i];
            }
            else
            {
                repetitionsCount = 0;
            }
            if (maxRepetitionsCount < repetitionsCount)
            {
                maxRepetitionsCount = repetitionsCount;
                finalRepeatingNumber = repeatingNumber;
            }
        }

        Console.WriteLine("\nЧаще всех повторяется: " + finalRepeatingNumber);
        Console.WriteLine("Количество повторений: " + (maxRepetitionsCount + 1));
    }
}
