using System;

internal class Program
{
    private static void Main(string[] args)
    {
        string stopWord = "exit";

        Console.WriteLine("Введите стоп-слово: ");
        string playerStopWord = Console.ReadLine();

        while (playerStopWord != stopWord)
        {
            Console.WriteLine("Неверное стоп-слово. Введите стоп-слово:");
            playerStopWord = Console.ReadLine();
        }
    }
}
