internal class Program
{
    private static void Main(string[] args)
    {
        int totalCash = 0;
        int clientsCount = 5;

        Queue<int> clients = new Queue<int>();

        AddClientsToQueue(ref clients, ref clientsCount);

        Console.WriteLine($"Привет! Количество клиентов в очереди: {clientsCount}. Нажми любую клавишу для продолжения.");
        Console.ReadKey();

        WorkWithClients(ref clients, ref totalCash);
    }

    static void AddClientsToQueue(ref Queue<int> clients, ref int clientsCount)
    {
        Random random = new Random();

        int maxClientCash = 300;
        int minClientCash = 10;
        int tmp;

        for (int i = 0; i < clientsCount; i++)
        {
            tmp = random.Next(minClientCash, maxClientCash);
            clients.Enqueue(tmp);
        }
    }

    static void WorkWithClients(ref Queue<int> clients, ref int totalCash)
    {
        while (clients.Count > 0)
        {
            totalCash += clients.Dequeue();

            Console.WriteLine($"Мы обслужили клиента! Количество рублей в кассе: {totalCash}. Нажми любую клавишу для продолжения.");
            Console.ReadKey();
            Console.Clear();
        }
    }
}
