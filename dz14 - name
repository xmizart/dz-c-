using System;

internal class Program
{
    private static void Main(string[] args)
    {
        string name;
        string frameSymbol;

        int frameSymbolCount;
        int frameSymbolCorrector = 2;

        Console.WriteLine("Привет! Как тебя зовут?");
        name = Console.ReadLine();

        Console.WriteLine("Супер! Введи символ для красиовй рамочки вокруг твоего имени!");
        frameSymbol = Console.ReadLine();

        frameSymbolCount = (name.Length + frameSymbolCorrector);

        for (int i = 0; i < frameSymbolCount; i++)
        {
            Console.Write(frameSymbol);
        }

        Console.WriteLine($"\n{frameSymbol}{name}{frameSymbol}");

        for (int i = 0; i < frameSymbolCount; i++)
        {
            Console.Write(frameSymbol);
        }
    }
}
